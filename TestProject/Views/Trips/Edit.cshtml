@model TestProject.Models.ViewModels.TripViewModel  

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактиране</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="StartPosition" class="control-label">Начална Позиция</label>
                <input asp-for="StartPosition" class="form-control" />
                <span asp-validation-for="StartPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Destination" class="control-label">Дестинация</label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DepartureTime" class="control-label">Час на заминаване</label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ReturnTime" class="control-label">Час на връщане</label>
                <input asp-for="ReturnTime" class="form-control" />
                <span asp-validation-for="ReturnTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="TotalSeats" class="control-label">Общо места</label>
                <input asp-for="TotalSeats" class="form-control" />
                <span asp-validation-for="TotalSeats" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="CarModel" class="control-label">Модел на автомобила</label>
                <input asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PlateNumber" class="control-label">Регистрационен номер</label>
                <input asp-for="PlateNumber" class="form-control" />
                <span asp-validation-for="PlateNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ImageFile" class="control-label">Изображение на автомобила</label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="StatusTrip" class="control-label">Статус на пътуването</label>
                <select asp-for="StatusTrip" class="form-control" asp-items="Html.GetEnumSelectList<TestProject.Models.TripStatus>()"></select>
                <span asp-validation-for="StatusTrip" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="IsRecurring">Повтарящо се пътуване</label>
                <input asp-for="IsRecurring" id="isRecurring" />
            </div>

            @{
                string style1 = Model.IsRecurring ? "block" : "none";
            }

            <div id="recurrenceFields" style="display: @style1;">
                <div class="form-group">
                 
                    <span>Повтаря се на:</span> <br />
                    <label>Минути</label>
                    <input asp-for="RecurrenceIntervalMinutes" class="form-control" placeholder="Минути" /> <br />
                </div>
                <div class="form-group">
                    <label>Часове</label>
                    <input asp-for="RecurrenceIntervalHours" class="form-control" placeholder="Часове" /><br />
                </div>
                <div class="form-group">
                    <label>Дни</label>
                    <input asp-for="RecurrenceIntervalDays" class="form-control" placeholder="Дни" /><br />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-returnUrl="@ViewBag.ReturnUrl">Върни се обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    document.getElementById("isRecurring").addEventListener("change", function() {
        document.getElementById("recurrenceFields").style.display = this.checked ? "block" : "none";
    });
</script>