@using TestProject.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">
            <i class="fas fa-user"></i> Профил
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">
            <i class="fas fa-key"></i> Смяна на парола
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="UserPanel" asp-action="Index">
            <i class="fas fa-tachometer-alt"></i> Моят панел
        </a>
    </li>
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                <i class="fas fa-users-cog"></i> Админ панел
            </a>
        </li>
    }
</ul>

