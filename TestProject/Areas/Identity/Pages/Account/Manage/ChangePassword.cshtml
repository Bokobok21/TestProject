@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Смяна на парола";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>Смяна на парола</h3>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    var statusClass = Model.StatusMessage.Contains("Error") ? "error" : "success";
    <div class="status-message @statusClass" role="alert">
        <i class="fas @(statusClass == "error" ? "fa-exclamation-circle" : "fa-check-circle")"></i>
        @Model.StatusMessage
    </div>
}

<div class="change-password-section">
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Напишете старата си парола." />
            <label asp-for="Input.OldPassword" class="form-label">Стара парола</label>
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Напишете новата си парола." />
            <label asp-for="Input.NewPassword" class="form-label">Нова парола</label>
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>

        <div class="form-floating mb-4">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Потвърдете паролата си" />
            <label asp-for="Input.ConfirmPassword" class="form-label">Потвърди паролата</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="profile-actions">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-key"></i> Смени паролата
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

