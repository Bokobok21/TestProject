@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css" />

<div class="login-container" style="margin-top: 50px; padding-bottom: 40px;">
    <h2>Създай акаунт</h2>
    <hr />
    
    <form id="registerForm" class="register-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        
        <div class="form-row">
            <div class="form-col">
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control login-input" autocomplete="given-name" aria-required="true" placeholder="FirstName" />
                    <label asp-for="Input.FirstName">Име</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.UserName" class="form-control login-input" aria-required="true" placeholder="UserName" />
                    <label asp-for="Input.UserName">Потребителско име</label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control login-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-col">
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control login-input" autocomplete="family-name" aria-required="true" placeholder="LastName" />
                    <label asp-for="Input.LastName">Фамилия</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control login-input" autocomplete="tel" aria-required="true" placeholder="+359877388244" />
                    <label asp-for="Input.PhoneNumber">Телефонен номер</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control login-input" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Потвърди паролата</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-floating mb-3" style="margin-top: 30px;">
            <input asp-for="Input.Email" class="form-control login-input" autocomplete="email" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Имейл</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="justify-content: center; margin-top: 0px;">Регистрирай се</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

