@page
@model TestProject.Areas.Identity.Pages.Account.ApplyToBeDriverModel

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Input.ImageFile">Profile Picture</label>
        <input asp-for="Input.ImageFile" type="file" class="form-control" accept="image/*" />
        <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Apply to Be a Driver</button>
</form>
